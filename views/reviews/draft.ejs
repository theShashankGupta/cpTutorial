<body>
  <%- include('../partials/navbar') %>
  

<div class=" row">

 <div class="col-md-0 col-lg-0 col-xl-0" >
  
  <section class=" gradient-custom">
    <div class="container mt-5">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-10 ">
          
        </div>
      </div>
    </div>
  </section>
  

 </div> 


 <div class="col-md-12 col-lg-12 col-xl-12" >
<% let countBlog=0 %> 

<% for(let review of reviews){ %> 
<% countBlog++ %> 

  <div class="container border-3 text-dark mb-5"  id="fullBlog">
    <div class="container"> 
        <div class="container">          

    <div id="blogTitles"><%=  review.title %></div>
    <div id="blogAuthors" class="mt-2"> <span >Written by</span> <b> <%= review.author  %>  </b>, <span ><%=review.publishDate%></span>  </div>

  <div id="blogContents"> <%-  review.content %> </div>

  <div class="pt-3" id="blogContinues"><a href="/reviews/<%= review._id %>">Continue reading</a></div>


  <div id="blogTagss">
    Tags:
    <% for(let tag of review.tag){ %> 
     #<%=tag%> 
     <% } %> 
  </div>


  </div>
  </div>
  </div>

<% } %> 

</div>
</div>

