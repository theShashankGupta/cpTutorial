<body>
  
  <%- include('../partials/navbar') %>



<div class=" row">

 <div class="col-md-0 col-lg-3 col-xl-3" >
  
  <section class=" gradient-custom">
    <div class="container mt-5">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-md-10 col-xl-8 ">
          <div class="card text-white" style="border-radius: 1rem; background-color: white; box-shadow: 0 1px 1px 0 rgb(159 167 194 / 40%);">
            <div class="card-body p-2 text-center">
  
              <div class="md-5 mt-md-4 ">
  
                <form action="/reviews/filter" method="POST">
                <h3 class="  text-uppercase" style="color:black;">Filter</h3>
                <p class="text-white-50 mb-4"></p>
 
                <div class="px-3">
                <div class="form-outline form-white mb-4" >
                  <input type="text" id="username" name="username" class="form-control form-control-sm" placeholder="Username" style=" border-color: black;"/>
                </div>
                <div class="form-outline form-white mb-4" >
                  <input type="text" id="tag" name="tag" class="form-control form-control-sm" placeholder="Tag" style=" border-color: black;"/>
                </div>
               </div>

                <button class="btn btn-outline-light btn-lg px-3 btn-sm mb-2" type="submit" style="color:rgb(136, 136, 241); border-color: rgb(136, 136, 241);">Apply</button>
              </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  

 </div> 


 <div class="col-md-12 col-lg-9 col-xl-9" >

<% let countBlog=0 %> 

<% for(let review of reviews){ %> 

<% countBlog++ %> 

  <div class="container border-1 text-dark mb-5"  id="fullBlog">
    
        <div class="container">          

    <div id="blogTitles"><%=  review.title %></div>
  <div id="blogAuthors" class="mt-2"> <span >Written by</span> <b> <%= review.author  %>  </b>, <span ><%=review.publishDate%></span>  </div>

  <div id="blogContents"> <%- review.content %> </div>

  <div class="pt-3" id="blogContinues"><a href="/reviews/<%= review._id %>">Continue reading</a></div>

  <div id="blogTagss">
    Tags:
    <% for(let tag of review.tag){ %> 
     #<%=tag%> 
     <% } %> 
  </div>


  </div>
  
  </div>

<% } %> 


<% if(countBlog == 0){ %> 
  <div class="d-flex justify-content-center" style="height: 200px; margin-top:14.3em ;"> Oops! Nothing to show</div>
<% } %> 
  


</div>



</div>
 
